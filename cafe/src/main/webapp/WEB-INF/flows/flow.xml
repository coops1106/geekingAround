<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://www.springframework.org/schema/webflow 
							http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
		start-state="firstPage">
	
	<view-state id="firstPage">
		<on-render>
			<render fragments="body444" />
		</on-render>
        <transition on="submit">
        	<render fragments="bob"></render>
        </transition>
    </view-state>
	
	<action-state id="addDrink">
		<evaluate expression="addDrinkService.addDrink" />
		<render fragments="footer"></render>
	</action-state>
	
</flow>